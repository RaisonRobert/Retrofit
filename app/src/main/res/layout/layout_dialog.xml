<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView

        android:id="@+id/textViewPergunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="" />

    <RatingBar
        android:id="@+id/ratingBarStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPergunta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:stepSize="1"
        android:numStars="5" />

    <TextView
        android:id="@+id/textViewStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingBarStar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="" />

    <Button
        android:id="@+id/btnPergunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewStar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/botao"
        android:onClick="showDialog"

        android:text="ok" />


</RelativeLayout>